<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SomeOrder">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:onClick="onClickBackToMyOrders"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказ №1"
                android:paddingRight="20dp"
                android:fontFamily="@font/comfortaa_regular"
                android:textAlignment="center"
                android:textSize="36dp"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>


                <!-- <ImageButton

                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="20dp"

                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_division"
                    />-->

        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/card_with_image">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/title_container">
                <TextView
                    android:id="@+id/title_basket_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Шефбургер"
                    android:layout_marginLeft="21dp"
                    android:textSize="20sp"
                    android:textFontWeight="400"

                    android:fontFamily="@font/comfortaa_regular"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textFontWeight="400"
                    android:textSize="20dp"
                    android:drawableRight="@drawable/ic_ruble"
                    android:drawablePadding="4dp"
                    android:id="@+id/price_basket_card"
                    android:textAlignment="textEnd"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/title_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="Количество: 1"
                    android:textColor="#000000"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textSize="20dp"/>



            </LinearLayout>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_with_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/image_basket_card"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#C4C4C4"


                />

        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/shadow_line_basket"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/card_with_image"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/card_with_image2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/title_container2">
                <TextView
                    android:id="@+id/title_basket_card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Гамбургер"
                    android:layout_marginLeft="21dp"
                    android:textSize="20sp"
                    android:textFontWeight="400"

                    android:fontFamily="@font/comfortaa_regular"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textFontWeight="400"
                    android:textSize="20dp"
                    android:drawableRight="@drawable/ic_ruble"
                    android:drawablePadding="4dp"
                    android:id="@+id/price_basket_card2"
                    android:textAlignment="textEnd"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/title_container2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="Количество: 2"
                    android:textColor="#000000"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textSize="20dp"/>



            </LinearLayout>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_with_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/image_basket_card2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#C4C4C4"


                />

        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/shadow_line_basket2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/card_with_image2"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ИТОГО: 500"
        android:textSize="24dp"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:fontFamily="@font/comfortaa_regular"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-персон: "
            android:textSize="24dp"
            android:textColor="#000000"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_toLeftOf="@+id/editTextPerson"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editTextPerson"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:backgroundTint="#E5E5E5"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/divided_summa"
            android:digits="0123456789"
            android:hint="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/comfortaa_regular"
            android:inputType="phone"
            android:maxLength="2"
            android:textFontWeight="700"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/divided_summa"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" =500"
            android:textSize="24dp"
            android:textColor="#000000"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</LinearLayout>