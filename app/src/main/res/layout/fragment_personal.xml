<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalFragment"
    android:id="@+id/fragment_personal">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Личное"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textAlignment="center"
            android:textSize="36dp"
            android:textColor="#000000"

            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="onClickRegestration"
            android:id="@+id/fill_data_or_go_to_data_button"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/go_to_regestration_or_data"
            android:onClick="onClickRegestration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заполнить данные"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/comfortaa_regular"

            tools:ignore="OnClick" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shadow"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/my_orders_view"
        android:visibility="invisible">
        <Button
            android:id="@+id/go_to_me_order_button"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/go_to_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мои заказы"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/comfortaa_regular"

            tools:ignore="OnClick" />

    </RelativeLayout>
    <View
        android:id="@+id/shadow_persanal_two"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shadow"
        android:visibility="invisible"
        />




</LinearLayout>