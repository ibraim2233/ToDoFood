<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="36dp"

        android:fontFamily="@font/comfortaa_regular"
        android:textFontWeight="700"
        android:text="Поиск"
        android:textAlignment="center"
        android:textSize="36dp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/search_dish"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="Рестораны, кухня и блюда"
        android:fontFamily="@font/comfortaa_regular"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:paddingLeft="20dp"
        android:drawablePadding="11dp"
        android:background="@drawable/bg_search"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E5E5E5"

        android:layout_marginRight="4dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/filter_burger"
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Бургеры"
                android:textSize="18dp"
                android:fontFamily="@font/comfortaa_regular"
                tools:ignore="OnClick" />
            <Button
                android:id="@+id/filter_drink"
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"

                android:text="Напитки"
                android:textSize="18dp"
                android:fontFamily="@font/comfortaa_regular"
                tools:ignore="OnClick" />

            <Button
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"

                android:text="Суши"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:textColor="#000000"

                android:text="Супы"
                android:textSize="18dp"
                android:fontFamily="@font/comfortaa_regular"
                />
            <Button
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:textColor="#000000"

                android:text="Пицца"
                android:textSize="18dp"
                android:fontFamily="@font/comfortaa_regular"
                />
            <Button
                style="@style/ButtonFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19px"
                android:layout_marginBottom="19px"
                android:textColor="#000000"

                android:text="Пицца"
                android:textSize="18dp"
                android:fontFamily="@font/comfortaa_regular"
                />




        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/recycler_view_search">


    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>